
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"


    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:background="@drawable/drg"





        >
        <ImageView
            android:layout_width="240dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:padding="16dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="20dp"


            />



        <EditText
            android:layoutDirection="rtl"
            android:id="@+id/e1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:drawableRight="@drawable/ic_email_black_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint=" البيريد الالكتروني"
            android:background="#0164605D"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#9bb6bf"
            android:textColorHint="#9bb6bf" />
        <View
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:background="#9bb6bf"
            android:layout_gravity="center"
      />



        <EditText
            android:layoutDirection="rtl"
            android:id="@+id/e2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:gravity="center_horizontal"
            android:drawableRight="@drawable/ic_lock_outline_black_24dp"
            android:drawablePadding="12dp"
            android:ems="10"
            android:layout_marginTop="20dp"
            android:hint="  الرقم السري"
            android:background="#0164605D"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="8dp"
            android:textColor="#9bb6bf"
            android:textColorHint="#9bb6bf" />
        <View
            android:layout_width="290dp"
            android:layout_height="1dp"
            android:background="#9bb6bf"
            android:layout_gravity="center"
        />




        <Button
            android:id="@+id/b1"
            android:layout_width="290dp"
            android:layout_height="33dp"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"

            android:layout_gravity="center"
            android:background="@drawable/b1"
            android:text="تسجيل"
            android:textColor="#fff"

            />

        <Button
            android:id="@+id/b2"
            android:layout_width="290dp"
            android:layout_height="33dp"
            android:gravity="center_horizontal"
            android:background="@drawable/b5"

            android:layout_marginTop="30dp"
            android:text="تسجيل دخول"
            android:textColor="#9bb6bf"
            android:layout_gravity="center"


            />

        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/face1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_facebook" />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_search"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_twitter"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
